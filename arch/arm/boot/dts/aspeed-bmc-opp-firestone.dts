/dts-v1/;

#include "aspeed-g4.dtsi"

#include <dt-bindings/gpio/aspeed-gpio.h>

/ {
	model = "Firestone BMC";
	compatible = "ibm,firestone-bmc", "aspeed,ast2400";

	chosen {
		stdout-path = &uart5;
		bootargs = "console=ttyS4,115200";
	};

	memory {
		reg = <0x40000000 0x20000000>;
	};

	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		vga_memory: framebuffer@5f000000 {
			no-map;
			reg = <0x5f000000 0x01000000>; /* 16MB */
		};
	};

	leds {
		compatible = "gpio-leds";

		heartbeat {
			gpios = <&gpio ASPEED_GPIO(R, 4) GPIO_ACTIVE_LOW>;
		};

		power {
			gpios = <&gpio ASPEED_GPIO(R, 5) GPIO_ACTIVE_LOW>;
		};

		identify {
			gpios = <&gpio ASPEED_GPIO(A, 2) GPIO_ACTIVE_LOW>;
		};
	};
};

&fmc {
	status = "okay";
	flash@0 {
		status = "okay";
		m25p,fast-read;
#include "aspeed-bmc-opp-flash-layout.dtsi"
	};
};

&spi {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_spi1_default>;

	flash@0 {
		status = "okay";
		m25p,fast-read;
		label = "pnor";
	};
};

&mac0 {
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_rgmii1_default &pinctrl_mdio1_default>;
};

&uart1 {
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_txd1_default
			&pinctrl_rxd1_default
			&pinctrl_nrts1_default
			&pinctrl_ndtr1_default
			&pinctrl_ndsr1_default
			&pinctrl_ncts1_default
			&pinctrl_ndcd1_default
			&pinctrl_nri1_default>;
};

&uart2 {
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_txd2_default
			&pinctrl_rxd2_default
			&pinctrl_nrts2_default
			&pinctrl_ndtr2_default
			&pinctrl_ndsr2_default
			&pinctrl_ncts2_default
			&pinctrl_ndcd2_default
			&pinctrl_nri2_default>;
};

&uart5 {
	status = "okay";
};

&i2c0 {
	// grounded
	status = "disabled";
};

&i2c1 {
	// grounded
	status = "disabled";
};

&i2c2 {
	// i2c mux
};

&i2c3 {
	status = "okay";

	// i2c hub PCA9516A
	// spruce / madrone PDB
	// APSS
	// FIR (fan / SATA backplane)
	fanctl@52 {
		compatible = "max,max31785";
		reg = <0x52>;
	};

};

&i2c4 {
	status = "okay";

	// turismo
	occ@50 {
		compatible = "ibm,occ-i2c";
		reg = <0x50>;
	};

	tmp423@98 {
		compatible = "ti,tmp423";
		reg = <0x80000098>;
	};
};

&i2c5 {
	status = "okay";

	// turismo
	occ@50 {
		compatible = "ibm,occ-i2c";
		reg = <0x50>;
	};

	tmp423@98 {
		compatible = "ti,tmp423";
		reg = <0x80000098>;
	};
};

&i2c6 {
	// NC
	status = "disabled";
};

&i2c7 {
	// NC
	status = "disabled";
};

&i2c8 {
	// FSI (bit-banged interface via GPIO)
	status = "disabled";
};

&i2c9 {
	// 4 way mux
};

&i2c10 {
	// 4 way mux
};

&i2c11 {
	status = "okay";

	leds@c0 {
		compatible = "pca,pca9552led";
		reg = <0x800000c0>;
		// led9 - led_fault_n
		// led10 - pwr_led_n
		// led11 - rear_id_led_n
	};

	rtc@d0 {
		compatible = "dallas,ds3231";
		reg = <0x800000d0>;
	};

	si5338a@e2 {
		// SiLabs clock generator
		reg =<0x800000e2>;
	};

	idt@d6 {
		// IDT 9DBV0641 clock buffer
		reg = <0x800000d6>;
	};

	tpm@a3 {
		reg = <0x800000a3>;
	};
};

&i2c12 {
	// i2c hub PCA9516A
};

&i2c13 {
	// i2c hub PCA9516A
};

&gpio {
	cp0_fsi0_data_en {
		gpio-hog;
		gpios = <ASPEED_GPIO(H, 6) GPIO_ACTIVE_HIGH>;
		output-high;
		line-name = "cp0_fsi0_data_en";
	};
};

&vuart {
	status = "okay";
};

&wdt2 {
	status = "okay";
};
